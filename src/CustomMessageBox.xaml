<Window x:Class="Cutting_Optimizer.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cutting_Optimizer"
        mc:Ignorable="d"
        Title="Cutting Optimizer" 
        Height="150" Width="220"
        MinHeight="150" MinWidth="220"
        MaxHeight="150" MaxWidth="220"
        Background="#FF323232"
        WindowStartupLocation="CenterScreen">
    
    <StackPanel x:Name="stackPanel" Height="125">
        <Border BorderBrush="{x:Null}" Height="60" x:Name="border">
            <TextBlock x:Name="text" Foreground="#FFEAEAEE" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Border>
        <TextBlock Background="#FF616266" Height="3"/>
        <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="Buffer" Width="0"/>
            <Button x:Name="Button1" Width="60" Margin="36, 15, 5, 20" Background="#FF1A1A1B" Foreground="#FFEAEAEE" Height="18" Click="ClickButton"/>
            <Button x:Name="Button2" Width="60" Margin="14, 15, 5, 20" Background="#FF1A1A1B" Foreground="#FFEAEAEE" Height="18" Click="ClickButton"/>
        </StackPanel>
    </StackPanel>
</Window>
